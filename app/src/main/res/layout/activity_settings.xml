<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".settings">

    <LinearLayout
        android:id="@+id/firstLineTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <Button
            android:id="@+id/firstTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1 theme"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/secondTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2 theme"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondLineTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/firstLineTheme">
        <Button
            android:id="@+id/thirdTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3 theme"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/fourthTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="4 theme"
            android:layout_weight="1"/>
    </LinearLayout>

    <Button
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="вернуться"
        app:layout_constraintTop_toBottomOf="@id/secondLineTheme"
        style="@style/ButtonBack"/>

</androidx.constraintlayout.widget.ConstraintLayout>